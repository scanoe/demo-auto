<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="swagdemo" thread-count="1" parallel="tests">
    <test name="Chrome">
        <parameter name="BROWSER" value="CHROME"></parameter>
        <parameter name="USER" value="STANDARD"></parameter>
        <classes>
            <class name="Runners.TestRunner"></class>
        </classes>
    </test>
    <test name="firefox">
        <parameter name="BROWSER" value="FIRE_FOX"></parameter>
        <parameter name="USER" value="STANDARD"></parameter>
        <classes>
            <class name="Runners.TestRunner"></class>
        </classes>
    </test>
    <test name="Chrome performance">
        <parameter name="BROWSER" value="CHROME"></parameter>
        <parameter name="USER" value="PERFORMANCE_GLITCHED_USER"></parameter>
        <classes>
            <class name="Runners.TestRunner"></class>
        </classes>
    </test>
    <test name="firefox performance">
        <parameter name="BROWSER" value="FIRE_FOX"></parameter>
        <parameter name="USER" value="STANDARD"></parameter>
        <classes>
            <class name="Runners.TestRunner"></class>
        </classes>
    </test>
</suite>

